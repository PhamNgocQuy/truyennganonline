<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whrite"
    tools:context="com.quypn.truyenngan.PNQ18101997.TypeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toobarr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colortoobar"
        android:elevation="8dp"
        tools:targetApi="lollipop" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adViewContainer"
        android:layout_below="@+id/toobarr">

        <GridView
            android:id="@+id/girdview_mdl"
            style="@style/GirdViewColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/adViewContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
